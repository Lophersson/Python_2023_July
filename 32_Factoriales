STEP_01
class Factorial:
    def __init__(self, numero):
        self.num = numero
       
    def factorial(self):
        acum = 1
        for i in range(1, self.num+1):
            acum = i*acum        
        return acum

x = int(input("Valor:"))
obj = Factorial (x)
print(obj.factorial())

STEP_02
x = int(input("Valor:"))

def factorial(numero):
    acum = 1
    for i in range(1, numero+1):
        acum = i*acum        
    return acum


print(factorial(x))

