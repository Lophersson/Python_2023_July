STEP_01
def suma_pares(lista):
    suma = 0
    for e in lista:
        if e%2 == 0:
            suma = suma + e
    return suma

lista =[1,2,3,4,5,6,7,8,9]
x= suma_pares (lista)
print (x)

STEP_02
def es_par(num):
    return num%2==0

def suma_pares(lista):
   lista_pares = filter (es_par, lista) 
   suma = sum(lista_pares)
   return suma   

lista = [1,2,3,4,5,6,7,8,9]
x = suma_pares (lista)
print (x)
